{% extends 'base.html.twig' %}

{% block title %}Dashboard{% endblock %}

{% block main %}
<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <h1>Tableau de bord</h1>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-3">
            <div class="card">
                <div class="card-body">
                    <h2>Clients</h2>
                    <p>{{ clients|length }}</p>
                    <p><i class="fas fa-user-tie"></i></p>
                </div>
            </div>
        </div>
        <div class="col-3">
            <div class="card">
                <div class="card-body">
                    <h2>Services</h2>
                    <p>{{ services|length }}</p>
                    <p><i class="fas fa-concierge-bell" size="2"></i></p>
                </div>
            </div>
        </div>
        <div class="col-3">
            <div class="card">
                <div class="card-body">
                    <h2>Factures</h2>
                    <p>{{ factures|length }}</p>
                    <p><i class="fas fa-concierge-bell" size="2"></i></p>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}Client{% endblock %}

{% block main %}
    <h1>Client</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ client.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ client.lastName }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ client.firstName }}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ client.address }}</td>
            </tr>
            <tr>
                <th>Ville</th>
                <td>{{ client.city }}</td>
            </tr>
            <tr>
                <th>Code Postal</th>
                <td>{{ client.zipcode }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ client.email }}</td>
            </tr>
            <tr>
                <th>Téléphone Bureau</th>
                <td>{{ client.phoneDesk }}</td>
            </tr>
            <tr>
                <th>Créé le</th>
                <td>{{ client.createdAt ? client.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Modifié le</th>
                <td>{{ client.updatedAt ? client.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('admin_client_index') }}">Retour à la liste</a>

    <a href="{{ path('admin_client_edit', {'id': client.id}) }}"></a>

    {{ include('admin/client/_delete_form.html.twig') }}
{% endblock %}

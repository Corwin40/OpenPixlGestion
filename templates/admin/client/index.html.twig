{% extends 'base.html.twig' %}

{% block title %}Client index{% endblock %}

{% block main %}
    <h1>Client index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>LastName</th>
                <th>FirstName</th>
                <th>Address</th>
                <th>City</th>
                <th>Zipcode</th>
                <th>Email</th>
                <th>PhoneDesk</th>
                <th>CreatedAt</th>
                <th>UpdatedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for client in clients %}
            <tr>
                <td>{{ client.id }}</td>
                <td>{{ client.lastName }}</td>
                <td>{{ client.firstName }}</td>
                <td>{{ client.address }}</td>
                <td>{{ client.city }}</td>
                <td>{{ client.zipcode }}</td>
                <td>{{ client.email }}</td>
                <td>{{ client.phoneDesk }}</td>
                <td>{{ client.createdAt ? client.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ client.updatedAt ? client.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('admin_client_show', {'id': client.id}) }}">show</a>
                    <a href="{{ path('admin_client_edit', {'id': client.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="11">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('admin_client_new') }}">Create new</a>
{% endblock %}
